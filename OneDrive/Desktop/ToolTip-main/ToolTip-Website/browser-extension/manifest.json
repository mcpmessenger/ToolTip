{
  "manifest_version": 3,
  "name": "ToolTip Companion",
  "version": "1.0.0",
  "description": "AI-powered tooltips for any button on any webpage with 3D glass morphism design",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ToolTip Companion"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected-tooltip.js", "injected-tooltip.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
