{
  "manifest_version": 3,
  "name": "Playwright Tooltip System",
  "version": "1.1",
  "description": "Displays live screenshot previews when hovering over hyperlinks, powered by a Playwright backend.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
